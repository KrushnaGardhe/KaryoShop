<!-- Featured Products -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Transform Your Family's Happiness Today</h2>
            <p class="lead text-muted">Premium products that bring smiles to your babies and pets</p>
        </div>
        <div class="row">
            <% if (featuredProducts && featuredProducts.length > 0) { %>
                <% featuredProducts.forEach(product => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card product-card h-100 shadow-sm hover-lift">
                            <div class="position-relative">
                                <img src="<%= product.images[0] %>" class="card-img-top product-image" alt="<%= product.name %>">
                                <div class="product-overlay">
                                    <a href="/products/<%= product._id %>/buy-now" class="btn btn-warning btn-sm buy-now-overlay">
                                        <i class="fas fa-bolt me-1"></i>BUY NOW
                                    </a>
                                </div>
                                <% if (product.stock <= 5 && product.stock > 0) { %>
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-2 pulse-animation">
                                        ONLY <%= product.stock %> LEFT!
                                    </span>
                                <% } %>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text text-muted"><%= product.description.substring(0, 120) %>...</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="text-primary mb-0 fw-bold">₹<%= product.price %></h4>
                                            <small class="text-success"><i class="fas fa-truck me-1"></i>Free Delivery</small>
                                        </div>
                                        <div class="text-end">
                                            <div class="stars mb-1">
                                                <i class="fas fa-star text-warning"></i>
                                                <i class="fas fa-star text-warning"></i>
                                                <i class="fas fa-star text-warning"></i>
                                                <i class="fas fa-star text-warning"></i>
                                                <i class="fas fa-star text-warning"></i>
                                            </div>
                                            <small class="text-muted">4.9 (3.2k)</small>
                                        </div>
                                    </div>
                                    <div class="product-actions">
                                        <a href="/products/<%= product._id %>/buy-now" class="btn btn-warning w-100 mb-2 fw-bold">
                                            <i class="fas fa-bolt me-2"></i>BUY NOW - COD
                                        </a>
                                        <a href="/products/<%= product._id %>" class="btn btn-outline-primary w-100">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center">
