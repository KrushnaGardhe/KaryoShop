<% layout('layout') %>

    <!-- Products Header -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-6 fw-bold mb-0">Premium Products for Your Precious Family</h1>
                    <p class="text-muted">Safe, tested, and loved by 75,000+ families</p>
                </div>
                <div class="col-md-6">
                    <!-- Search and Filter Form -->
                    <form method="GET" class="d-flex gap-2 flex-wrap justify-content-md-end">
                        <input type="text" name="search" class="form-control" placeholder="Search for your family..."
                            value="<%= search %>" style="max-width: 200px;">
                        <select name="category" class="form-select" style="max-width: 150px;">
                            <option value="">All Categories</option>
                            <% categories.forEach(cat=> { %>
                                <option value="<%= cat %>" <%=category===cat ? 'selected' : '' %>><%= cat %>
                                </option>
                                <% }) %>
                        </select>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                        <% if (search || category) { %>
                            <a href="/products" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i>
                            </a>
                            <% } %>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Grid -->
    <section class="py-5">
        <div class="container">
            <% if (products && products.length> 0) { %>
                <div class="row">
                    <% products.forEach(product=> { %>
                        <!-- Desktop Grid -->
                        <div class="col-lg-4 col-md-6 mb-4 d-none d-md-block">
                            <div class="card product-card h-100 shadow-sm">
                                <div class="position-relative">
                                    <img src="<%= product.images[0] %>" class="card-img-top" alt="<%= product.name %>">
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <p class="text-muted">
                                        <%= product.description.substring(0, 100) %>...
                                    </p>
                                    <h4 class="text-primary fw-bold">₹<%= product.price %>
                                    </h4>
                                    <div class="mt-auto">
                                        <a href="/products/<%= product._id %>/buy-now"
                                            class="btn btn-warning w-100 mb-2 fw-bold">
                                            <i class="fas fa-bolt me-2"></i>BUY NOW - COD
                                        </a>
                                        <a href="/products/<%= product._id %>" class="btn btn-outline-primary w-100">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mobile List View -->
                        <div class="col-12 mb-3 d-block d-md-none">
                            <a href="/products/<%= product._id %>" class="product-list-link">
                                <div class="product-list d-flex p-2 border rounded bg-white">
                                    <!-- Image -->
                                    <div class="product-img me-3">
                                        <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="img-fluid"
                                            style="max-width:100px; object-fit:contain;">
                                    </div>
                                    <!-- Details -->
                                    <div class="flex-grow-1">
                                        <h6 class="fw-bold mb-1">
                                            <%= product.name %>
                                        </h6>
                                        <p class="text-muted small mb-1">
                                            <%= product.description.substring(0, 60) %>...
                                        </p>

                                        <!-- Rating -->
                                        <div class="d-flex align-items-center mb-1">
                                            <span class="badge bg-success me-2">
                                                <%= product.rating || '4.5' %> ★
                                            </span>
                                            <small class="text-muted">(<%= product.reviewsCount || '100+' %>)</small>
                                        </div>

                                        <!-- Price -->
                                        <div class="mb-1 d-flex align-items-baseline">
                                            <h6 class="text-dark mb-0 me-2">₹<%= product.price %>
                                            </h6>
                                            <small class="text-muted me-2"><s>₹<%= product.mrp || product.price*2 %>
                                                        </s></small>
                                            <span class="text-success fw-bold">50% off</span>
                                        </div>

                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }) %>
                </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-search fs-1 text-muted mb-3"></i>
                        <h3>No Products Found for Your Search</h3>
                        <p class="text-muted">Try adjusting your search or filter criteria.</p>
                        <a href="/products" class="btn btn-primary">View All Family Products</a>
                    </div>
                    <% } %>
        </div>
    </section>

    <!-- Trust Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 mb-3">
                    <i class="fas fa-shield-alt text-success fs-1 mb-2"></i>
                    <h6 class="fw-bold">100% Safe Products</h6>
                    <small class="text-muted">Tested for your family</small>
                </div>
                <div class="col-md-3 mb-3">
                    <i class="fas fa-money-bill text-primary fs-1 mb-2"></i>
                    <h6 class="fw-bold">Zero Risk Shopping</h6>
                    <small class="text-muted">Pay only when happy</small>
                </div>
                <div class="col-md-3 mb-3">
                    <i class="fas fa-heart text-danger fs-1 mb-2"></i>
                    <h6 class="fw-bold">Love Guarantee</h6>
                    <small class="text-muted">30-day happiness promise</small>
                </div>
                <div class="col-md-3 mb-3">
                    <i class="fas fa-phone-alt text-info fs-1 mb-2"></i>
                    <h6 class="fw-bold">Personal Care</h6>
                    <small class="text-muted">We call before delivery</small>
                </div>
            </div>
        </div>
    </section>

    <!-- Mobile List Styling -->
    <style>
        .product-list-link {
            text-decoration: none;
            color: inherit;
        }

        .product-list {
            transition: box-shadow 0.2s ease;
        }

        .product-list:hover {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
