<% layout('layout') %>

    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Checkout Form -->
                <div class="col-lg-8">
                    <h1 class="display-6 fw-bold mb-4">
                        <i class="fas fa-heart me-2"></i>Get These for Your Family - Pay When Happy
                    </h1>

                    <!-- Error Messages -->
                    <% if (typeof errors !=='undefined' && errors && errors.length> 0) { %>
                        <div class="alert alert-danger">
                            <h6 class="fw-bold mb-2">
                                <i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:
                            </h6>
                            <ul class="mb-0">
                                <% errors.forEach(error=> { %>
                                    <li>
                                        <%= error %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                        <% } %>

                            <!-- Checkout Form -->
                            <form method="POST" action="/checkout" id="checkoutForm" novalidate>
                                <!-- Delivery Information -->
                                <div class="card shadow-sm mb-4">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0"><i class="fas fa-home me-2"></i>Family Delivery Information
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="name" class="form-label fw-bold">Full Name *</label>
                                                <input type="text" class="form-control" id="name" name="name"
                                                    value="<%= typeof formData !== 'undefined' ? formData.name || '' : '' %>"
                                                    required minlength="2">
                                                <div class="invalid-feedback">
                                                    Please provide a valid full name (minimum 2 characters).
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="mobile" class="form-label fw-bold">Mobile Number *</label>
                                                <input type="tel" class="form-control" id="mobile" name="mobile"
                                                    value="<%= typeof formData !== 'undefined' ? formData.mobile || '' : '' %>"
                                                    required pattern="[0-9]{10}" placeholder="10-digit mobile number">
                                                <div class="invalid-feedback">
                                                    Please provide a valid 10-digit mobile number.
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="email" class="form-label fw-bold">Email Address
                                                (Optional)</label>
                                            <input type="email" class="form-control" id="email" name="email"
                                                value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>"
                                                placeholder="your.email@gmail.com">
                                            <div class="form-text">
                                                <i class="fas fa-info-circle text-info me-1"></i>Email is optional. If
                                                provided, it must be valid.
                                            </div>
                                        </div>

                                        <!-- Address Fields -->
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Family Home Address *</label>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="houseNo" class="form-label">House/Flat No. *</label>
                                                    <input type="text" class="form-control" id="houseNo" name="houseNo"
                                                        value="<%= typeof formData !== 'undefined' ? formData.houseNo || '' : '' %>"
                                                        required minlength="1" placeholder="e.g. Flat 12B, House 45">
                                                    <div class="invalid-feedback">Please provide your house/flat number.
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="street" class="form-label">Street / Area *</label>
                                                    <input type="text" class="form-control" id="street" name="street"
                                                        value="<%= typeof formData !== 'undefined' ? formData.street || '' : '' %>"
                                                        required minlength="3" placeholder="e.g. MG Road, Green Park">
                                                    <div class="invalid-feedback">Please provide your street/area.</div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="city" class="form-label">City *</label>
                                                    <input type="text" class="form-control" id="city" name="city"
                                                        value="<%= typeof formData !== 'undefined' ? formData.city || '' : '' %>"
                                                        required minlength="2">
                                                    <div class="invalid-feedback">Please provide your city.</div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="state" class="form-label">State *</label>
                                                    <input type="text" class="form-control" id="state" name="state"
                                                        value="<%= typeof formData !== 'undefined' ? formData.state || '' : '' %>"
                                                        required minlength="2">
                                                    <div class="invalid-feedback">Please provide your state.</div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="pincode" class="form-label">PIN Code *</label>
                                                    <input type="text" class="form-control" id="pincode" name="pincode"
                                                        value="<%= typeof formData !== 'undefined' ? formData.pincode || '' : '' %>"
                                                        required pattern="[0-9]{6}" minlength="6" maxlength="6"
                                                        inputmode="numeric"
                                                        oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                                                        placeholder="6-digit PIN Code">
                                                    <div class="invalid-feedback">Please provide a valid 6-digit PIN
                                                        Code.</div>
                                                </div>
                                            </div>

                                            <div class="mb-3">
                                                <label for="landmark" class="form-label">Landmark (Optional)</label>
                                                <input type="text" class="form-control" id="landmark" name="landmark"
                                                    value="<%= typeof formData !== 'undefined' ? formData.landmark || '' : '' %>"
                                                    placeholder="e.g. Near City Mall or Opposite SBI Bank">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Payment Option -->
                                <div class="card shadow-sm mb-4">
                                    <div class="card-header bg-success text-white">
                                        <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Family-Safe Payment</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="payment-option bg-light p-4 rounded">
                                            <div class="d-flex align-items-center">
                                                <input type="radio" class="form-check-input me-3" id="cod"
                                                    name="payment" value="COD" checked>
                                                <div>
                                                    <label for="cod" class="form-check-label fw-bold fs-5">
                                                        <i class="fas fa-money-bill-wave text-success me-2"></i>Pay When
                                                        Your Family is Happy
                                                    </label>
                                                    <p class="text-muted mb-0 mt-2">
                                                        Pay in cash only when you see your family's happiness. No
                                                        advance payment, no risk!
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="cod-info mt-3 p-3 bg-info bg-opacity-10 rounded">
                                            <h6 class="text-info mb-2"><i class="fas fa-heart me-2"></i>How Family-Safe
                                                Payment Works:</h6>
                                            <ol class="mb-0 text-muted">
                                                <li>We call to confirm your family's needs and address</li>
                                                <li>Your products are carefully prepared and dispatched within 2-3 days
                                                </li>
                                                <li>Our care expert calls before arriving at your home</li>
                                                <li>See your family's happiness, then pay in cash</li>
                                            </ol>
                                        </div>
                                    </div>
                                </div>

                                <!-- Checkout Actions -->
                                <div class="checkout-actions d-flex flex-column flex-md-row gap-3">
                                    <button type="submit" class="btn btn-warning btn-lg w-100 w-md-auto">
                                        <i class="fas fa-heart me-2"></i>Get These for My Family
                                    </button>
                                    <a href="/cart" class="btn btn-outline-secondary btn-lg w-100 w-md-auto">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Family Cart
                                    </a>
                                </div>
                            </form>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 100px;">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Family Love Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="order-items mb-3">
                                <% cart.forEach(item=> { %>
                                    <div class="order-item d-flex align-items-center mb-3 pb-2 border-bottom">
                                        <img src="<%= item.image %>" class="rounded me-3"
                                            style="width: 50px; height: 50px; object-fit: cover;"
                                            alt="<%= item.name %>">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <%= item.name %>
                                            </h6>
                                            <small class="text-muted">
                                                <% if (item.size) { %>Size: <%= item.size %> | <% } %>
                                                            <% if (item.color) { %>Color: <%= item.color %> | <% } %>
                                                                        Qty: <%= item.quantity %>
                                            </small>
                                            <div class="text-primary fw-bold">₹<%= (item.price *
                                                    item.quantity).toFixed(2) %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>

                            <div class="order-totals">
                                <div class="d-flex justify-content-between mb-2"><span>Subtotal:</span><span>₹<%=
                                            subtotal.toFixed(2) %></span></div>
                                <div class="d-flex justify-content-between mb-2"><span>Shipping:</span><span
                                        class="text-success">FREE</span></div>
                                <div class="d-flex justify-content-between mb-2"><span>COD Charges:</span><span
                                        class="text-success">FREE</span></div>
                                <hr>
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Total Amount:</strong>
                                    <strong class="text-primary fs-4">₹<%= subtotal.toFixed(2) %></strong>
                                </div>
                            </div>

                            <div class="delivery-info bg-light p-3 rounded">
                                <h6 class="fw-bold text-success mb-2"><i class="fas fa-home me-2"></i>Family Delivery
                                    Promise</h6>
                                <ul class="mb-0 text-muted small">
                                    <li>Free delivery to your family home</li>
                                    <li>Careful delivery within 3-5 days</li>
                                    <li>Care expert calls before arrival</li>
                                    <li>Pay only when family is happy</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Client-side validation
        document.getElementById('checkoutForm').addEventListener('submit', function (e) {
            const form = this;
            const fields = ['name', 'mobile', 'houseNo', 'street', 'city', 'state', 'pincode'].map(id => document.getElementById(id));
            let isValid = true;

            fields.forEach(f => f.classList.remove('is-invalid'));

            // Name
            if (!document.getElementById('name').value.trim() || document.getElementById('name').value.trim().length < 2) {
                document.getElementById('name').classList.add('is-invalid'); isValid = false;
            }

            // Mobile
            const mobile = document.getElementById('mobile').value.trim();
            if (!/^\d{10}$/.test(mobile)) { document.getElementById('mobile').classList.add('is-invalid'); isValid = false; }

            // Email (optional)
            const email = document.getElementById('email').value.trim();
            if (email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) { document.getElementById('email').classList.add('is-invalid'); isValid = false; }

            // Address
            ['houseNo', 'street', 'city', 'state', 'pincode'].forEach(id => {
                if (!document.getElementById(id).value.trim()) { document.getElementById(id).classList.add('is-invalid'); isValid = false; }
            });

            // Pincode
            if (!/^\d{6}$/.test(document.getElementById('pincode').value.trim())) { document.getElementById('pincode').classList.add('is-invalid'); isValid = false; }

            if (!isValid) { e.preventDefault(); e.stopPropagation(); const firstInvalid = form.querySelector('.is-invalid'); firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' }); firstInvalid.focus(); }

            form.classList.add('was-validated');
        });
    </script>
